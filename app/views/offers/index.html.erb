<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <% @offers.each do |offer| %>      
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em"><%= offer.advertiser_name %></text></svg>
            <div class="card-body">
              <p class="card-text"><%= offer.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to offer_path(offer), :class => "btn btn-success" do %>
                    <span data-feather="shopping-cart"></span> Shop now!
                  <% end %>
                </div>
                <% if offer.premium? %>
                  <span class="badge badge-danger">Premium</span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>